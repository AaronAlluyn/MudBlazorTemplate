@page "/counter2"
@rendermode InteractiveWebAssembly

<PageTitle>Counter (WASM 2)</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter (WASM 2)</MudText>

<MudText Class="mb-4">Current count: @currentCount</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>
<MudSelect T="string" Label="items" RelativeWidth="DropdownWidth.Adaptive">
	<MudSelectItem Value=@("foobar") >"foobar"</MudSelectItem>
	<MudSelectItem Value=@("foobar1")>"foobar1"</MudSelectItem>
	<MudSelectItem Value=@("foobar2")>"foobar2"</MudSelectItem>
</MudSelect>
@code {
	private int currentCount = 0;

	private void IncrementCount()
	{
		currentCount++;
	}
}